<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Voting Page</title>
    <style>
        * {
            margin: 0;
            padding: 0;
        }

        body {
            text-align: center;
        }

        .row {
            max-width: 1140px;
            margin-left: auto;
            margin-right: auto;
        }

        h1 {
            text-align: center;
            color: #20aae5;
            margin-bottom: 100px;
        }

        input {
            display: none;
        }

        label {
            display: inline-block;
            padding: 5px 10px;
            cursor: pointer;
        }

        label span {
            position: relative;
            line-height: 22px;
        }


        label span:before,
        label span:after {
            content: '';
        }




        label input:checked+span:after {
            opacity: 1;
        }



        label span:before {
            border: 1px solid #222021;
            width: 20px;
            height: 20px;
            margin-right: 10px;
            display: inline-block;
            vertical-align: top;
        }

        label span:after {
            background: #20aae5;
            width: 14px;
            height: 14px;
            position: absolute;
            top: 2px;
            left: 4px;
            transition: 300ms;
            opacity: 0;
        }

        body {
            background: #ebe9e9;
            font-family: Arial;
            font-weight: bold;
            color: rgba(0, 0, 0, 0.7);
        }


        input[type="submit"] {
            background: linear-gradient(90deg, #20aae5, #55e7fc);
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            font-family: "Raleway", sans-serif;
        }

        input[type="submit"]:hover {
            box-shadow: 0 8px 16px #20aae5;
        }

        #submit {
            visibility: hidden;

        }

        .btn {
            margin-top: 70px;
        }

        .each {
            margin-top: 20px;
        }

        h1 {
            margin-top: 30px;
        }
    </style>
</head>

<body>
    <div class="row">
        <h1> Vote for your candidate</h1>
    </div>
    <div class="row">

        <form action="/voting" method="POST">
            <div class="each">
                <label onClick="(function() {document.getElementById('submit').style.visibility = 'visible';})() ">
                    <input type="radio" name="radio" value="c1">
                    <span>Candidate 1&nbsp;&nbsp;&mdash;&nbsp;&nbsp;Place 1</span>
                </label>
            </div>
            <div class="each">
                <label onClick="(function() {document.getElementById('submit').style.visibility = 'visible';})() ">
                    <input type="radio" name="radio" value="c2">
                    <span>Candidate 2&nbsp;&nbsp;&mdash;&nbsp;&nbsp;Place 2</span>
                </label>
            </div>
            <div class="each">
                <label onClick="(function() {document.getElementById('submit').style.visibility = 'visible';})() ">
                    <input type="radio" name="radio" value="c3">
                    <span>Candidate 3&nbsp;&nbsp;&mdash;&nbsp;&nbsp;Place 3</span>
                </label>
            </div>
            <div class="each">
                <label onClick="(function() {document.getElementById('submit').style.visibility = 'visible';})() ">
                    <input type="radio" name="radio" value="c4">
                    <span>Candidate 4&nbsp;&nbsp;&mdash;&nbsp;&nbsp;Place 4</span>
                </label>
            </div>
            <div class="each">
                <label onClick="(function() {document.getElementById('submit').style.visibility = 'visible';})() ">
                    <input type="radio" name="radio" value="c5">
                    <span>Candidate 5&nbsp;&nbsp;&mdash;&nbsp;&nbsp;Place 5</span>
                </label>
            </div>

            <div class="each">
                <label onClick="(function() {document.getElementById('submit').style.visibility = 'visible';})() ">
                    <input type="radio" name="radio" value="c6">
                    <span>Candidate 6&nbsp;&nbsp;&mdash;&nbsp;&nbsp;Place 6</span>
                </label>
            </div>
            <div class="btn">
                <input id="submit" type="submit" value="Submit">
            </div>
        </form>
    </div>
</body>




<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js">  </script>
<script>
    $(document).ready(function () {
        var candidate;
        $("#submit").click(function () {
            // alert($('input[name="radio"]:checked').val())
            if ($('input[name="radio"]:checked').val() === 'c1') {
                candidate = "Candidate-1"
            }
            else if ($('input[name="radio"]:checked').val() === 'c2') {
                candidate = "Candidate-2"
            }
            else if ($('input[name="radio"]:checked').val() === 'c3') {
                candidate = "Candidate-3"
            }
            else if ($('input[name="radio"]:checked').val() === 'c4') {
                candidate = "Candidate-4"
            }
            else if ($('input[name="radio"]:checked').val() === 'c5') {
                candidate = "Candidate-5"
            }
            else if ($('input[name="radio"]:checked').val() === 'c6') {
                candidate = "Candidate-6"
            }

            $.post("http://127.0.0.1:5000/post/", JSON.stringify({ 'name': candidate }), function (data) {

                console.log(data)
            });

        });
    });
</script>



</html>